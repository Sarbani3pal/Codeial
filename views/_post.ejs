<div class="card">
    <div class="card-header">
      <a href="/users/profile/<%=post.user.id%>"><%=post.user.name%></a>
      <%if(post.user.id==locals.user.id){%>
      <small><a href="/posts/destroy-post/<%=post.id%>">X</a></small>
      <%}%>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%=post.content%></p>
        <footer class="blockquote-footer">Posted by <cite title="Source Title"><%=post.user.name%></cite></footer>
      </blockquote>
    </div>
    <div class="dropdown d-flex justify-content-end m-2">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Comments
      </button>
      <ul class="dropdown-menu p-2" aria-labelledby="dropdownMenuButton1">
        <form action="/comments/create-comment" method="POST" class="row g-3">
          <div class="col-auto">
            <label for="comment-box" class="visually-hidden">Comment</label>
            <input type="text" class="form-control" id="comment-box" name="content" placeholder="Comment...">
          </div>
          <input type="hidden" name="post" value=<%=post.id%>>
          <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Post</button>
          </div>
        </form>
      </ul>
      <div class="comments__list">
        <ul>
          <%for (comment of post.comments){%>
            <%-include('_comment')-%>
          <%}%>
        </ul>
      </div>
    </div>
</div>